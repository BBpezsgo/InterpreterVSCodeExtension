{
	"name": "bblang",
	"description": "Language client for my programming language",
	"author": "BB",
	"version": "0.0.2405",
	"displayName": "BBlang",
	"private": true,
	"preview": true,
	"engines": {
		"vscode": "^1.88.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"pricing": "Free",
	"publisher": "banszky",
	"repository": {
		"type": "git",
		"url": "https://github.com/BBpezsgo/InterpreterVSCodeExtension"
	},
	"markdown": "github",
	"icon": "icons/extension.png",
	"homepage": "https://github.com/BBpezsgo/InterpreterVSCodeExtension",
	"galleryBanner": {
		"color": "#2d1d37",
		"theme": "dark"
	},
	"activationEvents": [
		"onCommand:bblang.debug.debugEditorContents",
		"onLanguage:bbc",
		"onDebug"
	],
	"main": "./out/extension",
	"contributes": {
		"configuration": {
			"title": "BBlang",
			"type": "object",
			"properties": {
				"bblang.server.maxNumberOfProblems": {
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server",
					"scope": "resource"
				},
				"bblang.server.trace": {
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VSCode and the language server service",
					"scope": "resource"
				},
				"bblang.server.path": {
					"type": "string",
					"description": "Sets the path of the language server binary",
					"scope": "machine"
				},
				"bblang.runtime.executein": {
					"type": "string",
					"enum": [
						"Terminal",
						"External"
					],
					"enumDescriptions": [
						"Run the files in the built-in VS Code terminal",
						"Run the files in an external window"
					],
					"default": "Terminal",
					"description": "Specifies the terminal to use when executing a script",
					"scope": "resource"
				},
				"bblang.runtime.path": {
					"type": "string",
					"description": "Sets the path of the runtime binary",
					"scope": "machine"
				}
			}
		},
		"languages": [
			{
				"id": "bbc",
				"aliases": [
					"BBlang",
					"bbc"
				],
				"extensions": [
					".bbc"
				],
				"configuration": "./language-configuration.json",
				"icon": {
					"dark": "./icons/files/bbc.svg",
					"light": "./icons/files/bbc.svg"
				}
			},
			{
				"id": "bblang-test-result",
				"aliases": [
					"bblang-test-result"
				],
				"extensions": [
					".result"
				]
			}
		],
		"grammars": [
			{
				"language": "bbc",
				"scopeName": "source.bbc",
				"path": "./syntax/bblang.json"
			},
			{
				"language": "bblang-test-result",
				"scopeName": "source.result",
				"path": "./syntax/bblang-test-result.json"
			}
		],
		"snippets": [
			{
				"language": "bbc",
				"path": "./snippets/bblang.json"
			}
		]
	},
	"scripts": {
		"watch": "tsc -w --project ./",
		"update-vscode": "node ./node_modules/vscode/bin/install",
		"compile": "./clean && tsc --project ./",
		"package": "vsce package --out BBLangExtension.vsix",
		"pretest": "npm run compile",
		"test": "vscode-test",
		"list": "vsce ls"
	},
	"devDependencies": {
		"@types/adm-zip": "latest",
		"@types/fs-extra": "latest",
		"@types/node": "latest",
		"@types/vscode": "^1.88.0",
		"@vscode/test-cli": "latest",
		"@vscode/test-electron": "latest",
		"@vscode/vsce": "latest",
		"typescript": "latest",
		"vsce": "latest"
	},
	"dependencies": {
		"adm-zip": "latest",
		"fs-extra": "latest",
		"vscode-languageclient": "latest"
	},
	"capabilities": {
		"virtualWorkspaces": {
			"supported": false
		}
	}
}
