{
	"name": "bblang",
	"description": "Language client for my programming language",
	"author": "BB",
	"version": "0.0.2405",
	"displayName": "BBlang",
	"private": true,
	"preview": true,
	"engines": {
		"vscode": "^1.88.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"pricing": "Free",
	"publisher": "banszky",
	"repository": {
		"type": "git",
		"url": "https://github.com/BBpezsgo/InterpreterVSCodeExtension"
	},
	"markdown": "github",
	"icon": "icons/extension.png",
	"homepage": "https://github.com/BBpezsgo/InterpreterVSCodeExtension",
	"galleryBanner": {
		"color": "#2d1d37",
		"theme": "dark"
	},
	"activationEvents": [
		"onCommand:bbc.debug.debugEditorContents",
		"onLanguage:bbc",
		"onDebug"
	],
	"main": "./out/extension",
	"contributes": {
		"configuration": {
			"title": "BBlang",
			"type": "object",
			"properties": {
				"bblang.server.trace": {
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VSCode and the language server service",
					"scope": "resource"
				},
				"bblang.server.path": {
					"type": "string",
					"description": "Sets the path of the language server binary",
					"scope": "machine"
				},
				"bblang.runtime.executein": {
					"type": "string",
					"enum": [
						"Terminal",
						"External"
					],
					"enumDescriptions": [
						"Run the files in the built-in VS Code terminal",
						"Run the files in an external window"
					],
					"default": "Terminal",
					"description": "Specifies the terminal to use when executing a script",
					"scope": "resource"
				},
				"bblang.runtime.path": {
					"type": "string",
					"description": "Sets the path of the runtime binary",
					"scope": "machine"
				},
				"bblang.debug.server.path": {
					"type": "string",
					"description": "Sets the path of the debug adapter host binary",
					"scope": "machine"
				}
			}
		},
		"languages": [
			{
				"id": "bbc",
				"aliases": [
					"BBlang",
					"bbc"
				],
				"extensions": [
					".bbc"
				],
				"configuration": "./language-configuration.json",
				"icon": {
					"dark": "./icons/files/bbc.svg",
					"light": "./icons/files/bbc.svg"
				}
			},
			{
				"id": "bblang-test-result",
				"aliases": [
					"bblang-test-result"
				],
				"extensions": [
					".result"
				]
			}
		],
		"grammars": [
			{
				"language": "bbc",
				"scopeName": "source.bbc",
				"path": "./syntax/bblang.json"
			},
			{
				"language": "bblang-test-result",
				"scopeName": "source.result",
				"path": "./syntax/bblang-test-result.json"
			}
		],
		"snippets": [
			{
				"language": "bbc",
				"path": "./snippets/bblang.json"
			}
		],
		"commands": [
			{
				"command": "bbc.debug.debugEditorContents",
				"category": "BBlang",
				"title": "Debug File",
				"shortTitle": "Debug File",
				"enablement": "!inDebugMode",
				"icon": "$(debug-alt)"
			},
			{
				"command": "bbc.executeFile",
				"category": "BBlang",
				"title": "Run File",
				"shortTitle": "Run File",
				"icon": "$(run)",
				"enablement": "resourceLangId == bbc && !isInDiffEditor && shellExecutionSupported"
			}
		],
		"breakpoints": [
			{
				"language": "bbc"
			}
		],
		"debuggers": [
			{
				"type": "bbc",
				"languages": [
					"bbc"
				],
				"label": "BBlang Debug",
				"configurationAttributes": {
					"launch": {
						"required": [
							"program"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "Absolute path to a text file.",
								"default": "${workspaceFolder}/${command:AskForProgramName}"
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after launch.",
								"default": true
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "bbc",
						"request": "launch",
						"name": "Ask for file name",
						"program": "${workspaceFolder}/${command:AskForProgramName}",
						"stopOnEntry": true
					}
				],
				"configurationSnippets": [
					{
						"label": "BBlang Debug: Launch",
						"description": "A new configuration for 'debugging' a user selected file.",
						"body": {
							"type": "bbc",
							"request": "launch",
							"name": "Ask for file name",
							"program": "^\"\\${workspaceFolder}/\\${command:AskForProgramName}\"",
							"stopOnEntry": true
						}
					}
				]
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "bbc.executeFile",
					"group": "bbc",
					"when": "resourceLangId == bbc && shellExecutionSupported"
				}
			],
			"editor/title/context": [
				{
					"command": "bbc.executeFile",
					"group": "bbc",
					"when": "resourceLangId == bbc && shellExecutionSupported"
				}
			],
			"editor/title/run": [
				{
					"command": "bbc.debug.debugEditorContents",
					"group": "bbc",
					"when": "resourceLangId == bbc && !isInDiffEditor"
				},
				{
					"command": "bbc.executeFile",
					"group": "bbc",
					"when": "resourceLangId == bbc && !isInDiffEditor && shellExecutionSupported"
				}
			]
		}
	},
	"scripts": {
		"watch": "tsc -w --project ./",
		"compile": "./clean && tsc --project ./",
		"package": "vsce package --out BBLangExtension.vsix",
		"pretest": "npm run compile",
		"test": "vscode-test",
		"list": "vsce ls"
	},
	"devDependencies": {
		"@types/adm-zip": "latest",
		"@types/fs-extra": "latest",
		"@types/node": "latest",
		"@types/vscode": "^1.88.0",
		"@vscode/test-cli": "latest",
		"@vscode/test-electron": "latest",
		"@vscode/vsce": "latest",
		"typescript": "latest",
		"vsce": "latest"
	},
	"dependencies": {
		"adm-zip": "latest",
		"fs-extra": "latest",
		"vscode-languageclient": "latest"
	},
	"capabilities": {
		"virtualWorkspaces": {
			"supported": false
		}
	}
}