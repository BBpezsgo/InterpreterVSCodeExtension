{
	"name": "bblang",
	"description": "A VSCode extension to support some basic things in my BBlang programming language",
	"author": "BB",
	"version": "0.0.2404",
	"displayName": "BBlang",
	"private": true,
	"preview": true,
	"engines": {
		"vscode": "^1.85.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"pricing": "Free",
	"publisher": "banszky",
	"repository": {
		"type": "git",
		"url": "https://github.com/BBpezsgo/InterpreterVSCodeExtension"
	},
	"markdown": "github",
	"icon": "icons/extension.png",
	"homepage": "https://github.com/BBpezsgo/InterpreterVSCodeExtension",
	"galleryBanner": {
		"color": "#5c0f1c",
		"theme": "dark"
	},
	"activationEvents": [
		"onCommand:bblang.debug.debugEditorContents",
		"onLanguage:bbc",
		"onDebug"
	],
	"main": "./out/extension",
	"contributes": {
		"configuration": {
			"title": "BBlang configuration",
			"type": "object",
			"properties": {
				"bblangServer.maxNumberOfProblems": {
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server"
				},
				"bblangServer.trace.server": {
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VSCode and the language server service"
				},
				"bblangServer.execute-in": {
					"type": "string",
					"enum": [
						"Terminal",
						"External"
					],
					"enumDescriptions": [
						"Run the files in the built-in VS Code terminal",
						"Run the files in an external window"
					],
					"default": "Terminal",
					"description": "Where to execute the file",
					"scope": "resource"
				},
				"bblangServer.cmdPath": {
					"type": "string",
					"description": "Path to the interpreter",
					"scope": "machine"
				}
			}
		},
		"languages": [
			{
				"id": "bbc",
				"aliases": [
					"BBlang",
					"bbc"
				],
				"extensions": [
					".bbc"
				],
				"configuration": "./language-configuration.json",
				"icon": {
					"dark": "./icons/files/bbc.svg",
					"light": "./icons/files/bbc.svg"
				}
			},
			{
				"id": "bbc-test-result",
				"aliases": [
					"bbc-test-result"
				],
				"extensions": [
					".result"
				]
			}
		],
		"grammars": [
			{
				"language": "bbc",
				"scopeName": "source.bbc",
				"path": "./syntax/bbc.json"
			},
			{
				"language": "bbc-test-result",
				"scopeName": "source.result",
				"path": "./syntax/bbc-test-result.json"
			}
		],
		"snippets": [
			{
				"language": "bbc",
				"path": "./snippets/bbc.json"
			}
		],
		"commands": [
			{
				"command": "bblang.debug.debugEditorContents",
				"category": "BBlang",
				"title": "Debug BBC File",
				"shortTitle": "Debug File",
				"enablement": "!inDebugMode",
				"icon": "$(debug-alt)"
			},
			{
				"command": "bblang.executeFile",
				"category": "BBlang",
				"title": "Run BBC File",
				"shortTitle": "Run File",
				"icon": "$(run)",
				"enablement": "resourceLangId == bbc && !isInDiffEditor && shellExecutionSupported"
			}
		],
		"breakpoints": [
			{
				"language": "bbc"
			}
		],
		"debuggers": [
			{
				"type": "bblang",
				"languages": [
					"bbc"
				],
				"label": "BBlang Debug",
				"program": "C:/Users/bazsi/Documents/GitHub/InterpreterVSCodeExtension/debug-server/Release/net7.0/DebugServer.exe",
				"configurationAttributes": {
					"launch": {
						"required": [
							"program"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "Absolute path to a text file.",
								"default": "${workspaceFolder}/${command:AskForProgramName}"
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after launch.",
								"default": true
							},
							"trace": {
								"type": "boolean",
								"description": "Enable logging of the Debug Adapter Protocol.",
								"default": true
							},
							"compileError": {
								"type": "string",
								"description": "Simulates a compile error in 'launch' request.",
								"enum": [
									"default",
									"show",
									"hide"
								],
								"enumDescriptions": [
									"default: show compile error to user",
									"show compile error to user",
									"do not show compile error to user"
								]
							}
						}
					},
					"attach": {
						"required": [
							"program"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "Absolute path to a text file.",
								"default": "${workspaceFolder}/${command:AskForProgramName}"
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after attach.",
								"default": true
							},
							"trace": {
								"type": "boolean",
								"description": "Enable logging of the Debug Adapter Protocol.",
								"default": true
							},
							"compileError": {
								"type": "string",
								"description": "Simulates a compile error in 'attach' request.",
								"enum": [
									"default",
									"show",
									"hide"
								],
								"enumDescriptions": [
									"default: show fake compile error to user",
									"show fake compile error to user",
									"do not show fake compile error to user"
								]
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "bblang",
						"request": "launch",
						"name": "Ask for file name",
						"program": "${workspaceFolder}/${command:AskForProgramName}",
						"stopOnEntry": true
					}
				],
				"configurationSnippets": [
					{
						"label": "BBlang Debug: Launch",
						"description": "A new configuration for 'debugging' a user selected file.",
						"body": {
							"type": "bblang",
							"request": "launch",
							"name": "Ask for file name",
							"program": "^\"\\${workspaceFolder}/\\${command:AskForProgramName}\"",
							"stopOnEntry": true
						}
					}
				]
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "bblang.executeFile",
					"group": "bblang",
					"when": "resourceLangId == bbc && shellExecutionSupported"
				}
			],
			"editor/title/context": [
				{
					"command": "bblang.executeFile",
					"group": "bblang",
					"when": "resourceLangId == bbc && shellExecutionSupported"
				}
			],
			"editor/title/run": [
				{
					"command": "bblang.debug.debugEditorContents",
					"group": "bblang",
					"when": "resourceLangId == bbc && !isInDiffEditor"
				},
				{
					"command": "bblang.executeFile",
					"group": "bblang",
					"when": "resourceLangId == bbc && !isInDiffEditor && shellExecutionSupported"
				}
			]
		}
	},
	"scripts": {
		"watch": "tsc -w -p ./",
		"update-vscode": "node ./node_modules/vscode/bin/install",
		"compile": "tsc --project ./",
		"package": "echo Bruh >LICENSE.txt && npm run webpack && vsce package --target win32-x64 --out BBCodeExtension.vsix && del LICENSE.txt",
		"webpack-dev": "webpack --mode development",
		"webpack-watch": "webpack --mode development --watch",
		"webpack": "webpack --mode production --devtool hidden-source-map",
		"pretest": "npm run compile",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/adm-zip": "latest",
		"@types/fs-extra": "latest",
		"@types/node": "latest",
		"@types/vscode": "^1.85.0",
		"@vscode/test-cli": "latest",
		"@vscode/test-electron": "latest",
		"@vscode/vsce": "latest",
		"ts-loader": "latest",
		"typescript": "latest",
		"vsce": "latest",
		"webpack": "latest",
		"webpack-cli": "latest"
	},
	"dependencies": {
		"adm-zip": "latest",
		"fs-extra": "latest",
		"vscode-languageclient": "latest"
	},
	"capabilities": {
		"virtualWorkspaces": {
			"supported": false,
			"description": "BBlang runner does currently not support virtual workspaces. Because it needs to have the files on disk to execute them."
		}
	}
}
