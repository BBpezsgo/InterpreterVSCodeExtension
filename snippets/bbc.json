{
    "For loop": {
		"prefix": "for",
		"body": [
			"for (int ${1:i}; $1 < $2.Length; $1++)",
            "{",
            "  $3",
            "};"
		]
	},
    "While loop": {
		"prefix": "while",
		"body": [
			"while (${1:true})",
            "{",
            "  $2",
            "};"
		]
	},
    "If statement": {
		"prefix": "if",
		"body": [
			"if ($1)",
            "{",
            "  $2",
            "};"
		]
	},
    "If & Else statement": {
		"prefix": "ifelse",
		"body": [
			"if ($1)",
            "{",
            "  $2",
            "}",
            "else",
            "{",
            "  $3",
            "};"
		]
	},
    "If & ElseIf statement": {
		"prefix": "ifelseif",
		"body": [
			"if ($1)",
            "{",
            "  $3",
            "}",
            "elseif ($2)",
            "{",
            "  $4",
            "};"
		]
	},
    "Using": {
		"prefix": "using",
		"body": [
			"using ${1:System};"
		]
	},
    "Function": {
		"prefix": "function",
		"body": [
			"${1:void} ${2:MyFunction}($3)",
			"{",
			"  $4",
			"}",
			""
		],
		"description": "Function definition"
	},
    "Method": {
		"prefix": ["method", "extension"],
		"body": [
			"${1:void} ${2:MyFunction}(this ${3:type} ${4:self})",
			"{",
			"  $5",
			"}",
			""
		],
		"description": "Function definition with a parameter that have 'this' keyword"
	},
    "UUID": {
		"prefix": ["uuid", "id"],
		"body": [
			"$UUID"
		],
		"description": "v4 UUID"
	}
}
