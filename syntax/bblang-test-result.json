{
	"scopeName": "source.result",
	"fileTypes": [
		"bblang-test-result"
	],
	"name": "BBLang Test Result Language",
	"patterns": [
		{ "include": "#escaped" },
		{ "include": "#hash" }
	],
	"repository": {
		"escaped": {
			"match": "(\\.)",
			"name": "constant.character.escape"
		},
		"hash": {
			"patterns": [
				{
					"match": "(#exitcode)\\s+(-?\\d+)\n",
					"captures": {
						"1": {
							"name": "keyword"
						},
						"2": {
							"name": "constant.numeric"
						}
					}
				},
				{
					"match": "(#.*)\n",
					"captures": {
						"1": {
							"name": "invalid"
						}
					}
				}
			]
		}
	}
}