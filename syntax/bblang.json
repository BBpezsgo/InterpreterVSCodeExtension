{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "patterns": [
    {
      "include": "#comment"
    },
    {
      "include": "#comment-block"
    },
    {
      "include": "#hash"
    },
    {
      "include": "#alias-definition"
    },
    {
      "include": "#struct-definition"
    },
    {
      "include": "#enum-definition"
    },
    {
      "include": "#function-definition"
    },
    {
      "include": "#using"
    },
    {
      "include": "#attribute"
    },
    {
      "include": "#keyword"
    },
    {
      "include": "#any-statement"
    },
    {
      "include": "#scope"
    }
  ],
  "repository": {
    "scope": {
      "begin": "{",
      "end": "}",
      "patterns": [
        {
          "include": "#comment"
        },
        {
          "include": "#comment-block"
        },
        {
          "include": "#attribute"
        },
        {
          "include": "#keyword"
        },
        {
          "include": "#any-statement"
        },
        {
          "include": "#scope"
        }
      ]
    },
    "hash": {
      "captures": {
        "1": {
          "name": "constant.language"
        },
        "2": {
          "name": "entity.name.variable"
        }
      },
      "match": "(#[a-zA-Z]*)\\s *([a-zA-Z]*)"
    },
    "literal": {
      "patterns": [
        {
          "include": "#strings"
        },
        {
          "include": "#number"
        }
      ]
    },
    "any-statement": {
      "patterns": [
        {
          "include": "#comment"
        },
        {
          "include": "#comment-block"
        },
        {
          "include": "#as"
        },
        {
          "include": "#flow-control-statement"
        },
        {
          "include": "#variable-definition"
        },
        {
          "include": "#new-instance"
        },
        {
          "include": "#sizeof"
        },
        {
          "include": "#function-call"
        },
        {
          "include": "#literal"
        },
        {
          "include": "#hover-popup"
        },
        {
          "include": "#keyword"
        },
        {
          "include": "#field"
        },
        {
          "include": "#type"
        },
        {
          "include": "#identifier"
        }
      ]
    },
    "sizeof": {
      "begin": "\\b(sizeof)\\s*\\(",
      "beginCaptures": {
        "1": {
          "name": "keyword.control"
        }
      },
      "end": "\\)",
      "patterns": [
        {
          "include": "#type"
        },
        {
          "captures": {
            "1": {
              "name": "entity.name.type"
            }
          },
          "match": "\\b(\\w+)\\b"
        }
      ]
    },
    "as": {
      "captures": {
        "1": {
          "name": "keyword.control"
        },
        "2": {
          "patterns": [
            {
              "include": "#type"
            }
          ]
        }
      },
      "match": "\\b(as)\\b\\s+((?!(?:struct|using|alias|temp|ref|this|const|inline|private|export|as|new|delete)\\b)[a-zA-Z_@]+[a-zA-Z0-9_@\\*\\[\\]\\<\\>\\,\\s]*)\\b"
    },
    "type": {
      "patterns": [
        {
          "captures": {
            "1": {
              "name": "entity.name.type"
            },
            "2": {
              "patterns": [
                {
                  "include": "#type"
                }
              ]
            }
          },
          "match": "\\b((?!(?:struct|using|alias|temp|ref|this|const|inline|void|any|u8|i8|u16|i16|u32|i32|u64|i64|f32|private|export|as|new|delete)\\b)[a-zA-Z_@]+[a-zA-Z0-9_@]*)\\b[\\t ]*<((?!(?:struct|using|alias|temp|ref|this|const|inline|private|export|as|new|delete)\\b)[a-zA-Z_@]+[a-zA-Z0-9_@\\*\\[\\]\\<\\>\\,\\s]*)>"
        },
        {
          "captures": {
            "1": {
              "name": "keyword.control"
            }
          },
          "match": "\\b(void|any|u8|i8|u16|i16|u32|i32|u64|i64|f32)\\b"
        },
        {
          "captures": {
            "1": {
              "name": "entity.name.type"
            }
          },
          "match": "\\b((?!(?:struct|using|alias|temp|ref|this|const|inline|void|any|u8|i8|u16|i16|u32|i32|u64|i64|f32|private|export|as|new|delete)\\b)[a-zA-Z_@]+[a-zA-Z0-9_@]*)\\b(\\*+)"
        }
      ]
    },
    "hover-popup": {
      "match": "^\\(\\w+\\)",
      "name": "emphasis"
    },
    "flow-control-statement": {
      "patterns": [
        {
          "match": "\\breturn\\b",
          "name": "keyword.control"
        },
        {
          "match": "\\bcrash\\b",
          "name": "keyword.control"
        },
        {
          "match": "\\bif\\b",
          "name": "keyword.control"
        },
        {
          "match": "\\belseif\\b",
          "name": "keyword.control"
        },
        {
          "match": "\\belse\\b",
          "name": "keyword.control"
        },
        {
          "match": "\\bwhile\\b",
          "name": "keyword.control"
        },
        {
          "match": "\\bfor\\b",
          "name": "keyword.control"
        },
        {
          "match": "\\bbreak\\b",
          "name": "keyword.control"
        }
      ]
    },
    "keyword-call": {
      "captures": {
        "1": {
          "name": "entity.name.tag"
        }
      },
      "match": "\\b(delete|temp|type)\\b"
    },
    "comment": {
      "match": "\\/\\/[^\\n]*\\n",
      "name": "comment.line"
    },
    "comment-block": {
      "patterns": [
        {
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.begin.bbc"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.end.bbc"
            }
          },
          "name": "comment.block"
        },
        {
          "match": "\\*/.*\\n",
          "name": "invalid.illegal.stray-comment-end.bbc"
        }
      ]
    },
    "number": {
      "match": "(\\.[0-9]+f?\\b|\\b[0-9]+f?\\b|\\b0x[0-9a-fA-F_]+\\b|\\b0b[01_]+\\b|\\b[0-9]e[0-9]f?\\b)",
      "name": "constant.numeric"
    },
    "string": {
      "match": "\"[\\s\\S]*\"",
      "name": "string.quoted.double.ulog"
    },
    "struct-definition": {
      "captures": {
        "1": {
          "name": "keyword.control"
        },
        "2": {
          "name": "entity.name.class"
        }
      },
      "match": "(struct)[\\s]+((?!(?:struct|using|alias|temp|ref|this|const|inline|void|any|u8|i8|u16|i16|u32|i32|u64|i64|f32|private|export|as|new|delete)\\b)[a-zA-Z_@]+[a-zA-Z0-9_@]*)"
    },
    "alias-definition": {
      "captures": {
        "1": {
          "name": "keyword.control"
        },
        "2": {
          "name": "entity.name.class"
        },
        "3": {
          "patterns": [
            {
              "include": "#type"
            }
          ]
        }
      },
      "match": "(alias)\\s+((?!(?:struct|using|alias|temp|ref|this|const|inline|void|any|u8|i8|u16|i16|u32|i32|u64|i64|f32|private|export|as|new|delete)\\b)[a-zA-Z_@]+[a-zA-Z0-9_@]*)\\s+((?!(?:struct|using|alias|temp|ref|this|const|inline|private|export|as|new|delete)\\b)[a-zA-Z_@]+[a-zA-Z0-9_@\\*\\[\\]\\<\\>\\,\\s]*)\\b"
    },
    "using": {
      "captures": {
        "1": {
          "name": "keyword.control"
        },
        "2": {
          "name": "string"
        }
      },
      "match": "\\b(using)\\s+([a-zA-Z0-9_\\.]+)"
    },
    "attribute": {
      "captures": {
        "1": {
          "name": "entity.name.class"
        }
      },
      "match": "\\s\\[\\s*((?!(?:struct|using|alias|temp|ref|this|const|inline|void|any|u8|i8|u16|i16|u32|i32|u64|i64|f32|private|export|as|new|delete)\\b)[a-zA-Z_@]+[a-zA-Z0-9_@]*)\\s*(\\]|\\()"
    },
    "keyword": {
      "patterns": [
        {
          "captures": {
            "1": {
              "name": "keyword.control"
            }
          },
          "match": "\\b(struct|using|alias|temp|ref|this|const|inline|void|any|u8|i8|u16|i16|u32|i32|u64|i64|f32|private|export|as|new|delete)\\b"
        },
        {
          "captures": {
            "1": {
              "name": "keyword.control"
            }
          },
          "match": "\\b(export)\\b"
        }
      ]
    },
    "function-call": {
      "captures": {
        "1": {
          "name": "entity.name.function"
        }
      },
      "match": "(?<!\\[)\\b((?!(?:struct|using|alias|temp|ref|this|const|inline|void|any|u8|i8|u16|i16|u32|i32|u64|i64|f32|private|export|as|new|delete)\\b)[a-zA-Z_@]+[a-zA-Z0-9_@]*)\\b\\s*(?=\\()"
    },
    "function-definition": {
      "captures": {
        "1": {
          "patterns": [
            {
              "include": "#type"
            }
          ]
        },
        "2": {
          "name": "entity.name.function"
        },
        "3": {
          "patterns": [
            {
              "include": "#parameter-definitions"
            }
          ]
        }
      },
      "match": "(\\w+)(?<!struct|using|alias|temp|ref|this|const|inline|private|export|as|new|delete)\\s+((?!(?:struct|using|alias|temp|ref|this|const|inline|void|any|u8|i8|u16|i16|u32|i32|u64|i64|f32|private|export|as|new|delete)\\b)[a-zA-Z_@]+[a-zA-Z0-9_@]*)\\s?\\(([\\w\\s,]?)\\)"
    },
    "parameter-definitions": {
      "captures": {
        "1": {
          "patterns": [
            {
              "include": "#keyword"
            }
          ]
        },
        "2": {
          "patterns": [
            {
              "include": "#type"
            }
          ]
        },
        "3": {
          "name": "variable.parameter"
        }
      },
      "match": "((this|ref|temp)*\\s+)?([\\w]+)\\s+((?!(?:struct|using|alias|temp|ref|this|const|inline|void|any|u8|i8|u16|i16|u32|i32|u64|i64|f32|private|export|as|new|delete)\\b)[a-zA-Z_@]+[a-zA-Z0-9_@]*)(,|$)"
    },
    "strings": {
      "patterns": [
        {
          "begin": "\"",
          "end": "\"",
          "name": "string.quoted.double",
          "patterns": [
            {
              "include": "#string-escaped-char"
            }
          ]
        },
        {
          "begin": "'",
          "end": "'",
          "name": "string.quoted.single",
          "patterns": [
            {
              "include": "#string-escaped-char"
            }
          ]
        }
      ]
    },
    "string-escaped-char": {
      "patterns": [
        {
          "match": "(?x)\\\\(\\\\|[ntr\\\"e]|0|(u[0-9a-fA-F]{4}))",
          "name": "constant.character.escape"
        },
        {
          "match": "\\\\(u[0-9a-zA-Z]{4}|.)",
          "name": "invalid.illegal.unknown-escape.bbc"
        }
      ]
    }
  },
  "fileTypes": [
    "bbc"
  ],
  "name": "BBLang Language",
  "scopeName": "source.bbc"
}