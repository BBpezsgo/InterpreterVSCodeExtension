{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "patterns": [
    {
      "include": "#comment"
    },
    {
      "include": "#comment-block"
    },
    {
      "include": "#preprocessor"
    },
    {
      "include": "#alias-definition"
    },
    {
      "include": "#struct-definition"
    },
    {
      "include": "#any-statement"
    },
    {
      "include": "#function-definition"
    },
    {
      "include": "#using"
    },
    {
      "include": "#scope"
    },
    {
      "include": "#keyword"
    }
  ],
  "repository": {
    "scope": {
      "begin": "{",
      "end": "}",
      "patterns": [
        {
          "include": "#comment"
        },
        {
          "include": "#comment-block"
        },
        {
          "include": "#attribute"
        },
        {
          "include": "#keyword"
        },
        {
          "include": "#any-statement"
        },
        {
          "include": "#scope"
        }
      ]
    },
    "preprocessor": {
      "captures": {
        "1": {
          "name": "constant.language"
        },
        "2": {
          "name": "entity.name.variable"
        }
      },
      "match": "(#[a-zA-Z]*)\\s *([a-zA-Z]*)"
    },
    "literal": {
      "patterns": [
        {
          "include": "#strings"
        },
        {
          "include": "#number"
        }
      ]
    },
    "any-statement": {
      "patterns": [
        {
          "include": "#comment"
        },
        {
          "include": "#comment-block"
        },
        {
          "include": "#as"
        },
        {
          "include": "#flow-control-statement"
        },
        {
          "include": "#function-call"
        },
        {
          "include": "#literal"
        },
        {
          "include": "#hover-popup"
        },
        {
          "include": "#keyword"
        },
        {
          "include": "#identifier"
        }
      ]
    },
    "hover-popup": {
      "match": "^\\(\\w+\\)",
      "name": "emphasis"
    },
    "flow-control-statement": {
      "captures": {
        "1": {
          "name": "keyword.control"
        }
      },
      "match": "\\b(return|crash|if|elseif|else|while|for|break)\\b"
    },
    "comment": {
      "match": "\\/\\/[^\\n]*\\n",
      "name": "comment.line"
    },
    "comment-block": {
      "patterns": [
        {
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.begin.bbc"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.end.bbc"
            }
          },
          "name": "comment.block"
        },
        {
          "match": "\\*/.*\\n",
          "name": "invalid.illegal.stray-comment-end.bbc"
        }
      ]
    },
    "number": {
      "match": "(\\.[0-9]+f?\\b|\\b[0-9]+f?\\b|\\b0x[0-9a-fA-F_]+\\b|\\b0b[01_]+\\b|\\b[0-9]e[0-9]f?\\b)",
      "name": "constant.numeric"
    },
    "struct-definition": {
      "captures": {
        "1": {
          "name": "keyword.control"
        },
        "2": {
          "name": "entity.name.type"
        }
      },
      "match": "(struct)[\\s]+((?!(?:struct|using|alias|temp|ref|this|const|inline|void|any|u8|i8|u16|i16|u32|i32|u64|i64|f32|private|export|as|new|delete|sizeof)\\b)[a-zA-Z_@]+[a-zA-Z0-9_@]*)"
    },
    "alias-definition": {
      "captures": {
        "1": {
          "name": "keyword.control"
        },
        "2": {
          "name": "entity.name.type"
        }
      },
      "match": "(alias)\\s+((?!(?:struct|using|alias|temp|ref|this|const|inline|void|any|u8|i8|u16|i16|u32|i32|u64|i64|f32|private|export|as|new|delete|sizeof)\\b)[a-zA-Z_@]+[a-zA-Z0-9_@]*)\\s+"
    },
    "using": {
      "captures": {
        "1": {
          "name": "keyword.control"
        },
        "2": {
          "name": "string"
        }
      },
      "match": "\\b(using)\\s+([a-zA-Z0-9_\\.]+)"
    },
    "keyword": {
      "captures": {
        "1": {
          "name": "keyword.control"
        }
      },
      "match": "\\b(struct|using|alias|temp|ref|this|const|inline|void|any|u8|i8|u16|i16|u32|i32|u64|i64|f32|private|export|as|new|delete|sizeof)\\b"
    },
    "function-call": {
      "captures": {
        "1": {
          "name": "entity.name.function"
        }
      },
      "match": "\\b((?!(?:struct|using|alias|temp|ref|this|const|inline|void|any|u8|i8|u16|i16|u32|i32|u64|i64|f32|private|export|as|new|delete|sizeof)\\b)[a-zA-Z_@]+[a-zA-Z0-9_@]*)\\b\\s*(?=\\()"
    },
    "function-definition": {
      "patterns": [
        {
          "captures": {
            "2": {
              "name": "entity.name.function"
            }
          },
          "match": "(\\w+)(?<!struct|using|alias|temp|ref|this|const|inline|private|export|as|new|delete|sizeof)\\s+((?!(?:struct|using|alias|temp|ref|this|const|inline|void|any|u8|i8|u16|i16|u32|i32|u64|i64|f32|private|export|as|new|delete|sizeof)\\b)[a-zA-Z_@]+[a-zA-Z0-9_@]*)\\s*(?=\\()"
        },
        {
          "captures": {
            "2": {
              "name": "entity.name.function"
            }
          },
          "match": "(\\w+)(?<!struct|using|alias|temp|ref|this|const|inline|private|export|as|new|delete|sizeof)\\s+((?!(?:struct|using|alias|temp|ref|this|const|inline|void|any|u8|i8|u16|i16|u32|i32|u64|i64|f32|private|export|as|new|delete|sizeof)\\b)[a-zA-Z_@]+[a-zA-Z0-9_@]*)\\s*<.*>\\s*(?=\\()"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "begin": "\"",
          "end": "\"",
          "name": "string.quoted.double",
          "patterns": [
            {
              "include": "#string-escaped-char"
            }
          ]
        },
        {
          "begin": "'",
          "end": "'",
          "name": "string.quoted.single",
          "patterns": [
            {
              "include": "#string-escaped-char"
            }
          ]
        }
      ]
    },
    "string-escaped-char": {
      "patterns": [
        {
          "match": "(?x)\\\\(\\\\|[ntr\\\"e]|0|(u[0-9a-fA-F]{4}))",
          "name": "constant.character.escape"
        },
        {
          "match": "\\\\(u[0-9a-zA-Z]{4}|.)",
          "name": "invalid.illegal.unknown-escape.bbc"
        }
      ]
    }
  },
  "fileTypes": [
    "bbc"
  ],
  "name": "BBLang Language",
  "scopeName": "source.bbc"
}