{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2020",
		"lib": [ "ES2020" ],
		"sourceMap": true,
		"outDir": "out",
		"rootDir": "src",

		"strict": true,

		"removeComments": false,
		"inlineSourceMap": false,
		"preserveConstEnums": true,
		"strictNullChecks": true,

		"noImplicitReturns": true,
		"noImplicitAny": false,
		"noImplicitThis": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false
	},
	"include": [
		"src"
	]
}